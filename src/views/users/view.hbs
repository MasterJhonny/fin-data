<div class="container p-4 height-content-crental">
    <div class="row row-cols-1" >
        <div class="col mx-auto" style="max-width: 500px;">
            <div class="card text-center">
                <div class="card-body">
                    <a href="#">
                        <span><b>Nombre(s):</b></span>
                        <h5 class="card-title text-uppercase">{{user.names}}</h5>
                    </a>
                    <span class="m-1"><b>Apellidos:</b></span>
                    <span class="m-1">{{user.last_name}}</span>
                    <span class="m-1">{{user.last_name_mother}}</span>
                    <div class="d-flex justify-content-center align-items-center">
                        <p class="m-2"><b>Carnet de identidad:</b></p>
                        <p class="m-2">{{user.ci}}</p>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <p class="m-2"><b>Registro universitario:</b></p>
                        <p class="m-2">{{user.re_uni}}</p>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <p class="m-2"><b>celular:</b></p>
                        <p class="m-2">{{user.cel}}</p>
                    </div>
                    <p>{{timeago created_at}}</p>
                    <a href="/users/edit/{{user._id}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
    </div>
</div>